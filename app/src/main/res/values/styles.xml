<resources>

    <!-- Tema com barra -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/corFundo</item>
        <item name="colorPrimaryDark">@color/corDestaque</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Tema sem barra -->
    <style name="temaSemBarra" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/corDestaque</item>
        <item name="colorPrimaryDark">@color/corFundo</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
